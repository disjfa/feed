{% for item in items %}
    <div class="card my-2" id="item-{{ item.id }}">
        {% if item.imageUrl %}
            <a href="{{ item.link | default(item.guid) }}" target="_blank">
                <img src="{{ asset(item.imagePath) | imagine_filter('medium') }}" alt="" class="card-img-top" loading="lazy">
            </a>
        {% endif %}
        <div class="card-body">
            <h3>{{ item.title }}</h3>
            <small>{{ item.pubDate | date }}</small>
            <p>{{ item.description | striptags | markdown | striptags | truncate(400) }}</p>
            <div>
                {% for origin in item.origins %}
                    {{ origin | origin_badge }}
                {% endfor %}
            </div>
        </div>
        <div class="card-footer">
            <div class="float-right">
                <a href="{{ item.link | default(item.guid) }}" target="_blank" class="btn btn-outline-primary">
                    <i class="fad fa-link"></i>
                    Check article
                </a>
            </div>
            <a href="#" class="js-scroll-into-view btn" data-target="#top" aria-label="Back up">
                <i class="fad fa-arrow-up"></i>
            </a>
            <a href="{{ path('item_star', {'item': item.id}) }}" class="js-star btn" data-item="{{ item.id }}" data-starred="fas fa-star text-primary" data-unstarred="fal fa-star text-secondary">
                {% if star_service.starred(item) %}
                    <i class="fas fa-star text-primary"></i>
                {% else %}
                    <i class="fal fa-star text-secondary"></i>
                {% endif %}
            </a>
        </div>
    </div>
{% endfor %}

<div class="py-3 d-flex justify-content-center">
    {{ knp_pagination_render(items) }}
</div>
